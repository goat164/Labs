@model Lab1.Models.Employee

@{
    ViewData["Title"] = "Dodaj Nowego Pracownika";
}

<h1>Dodaj Nowego Pracownika</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InsuranceNumber" class="control-label"></label>
                <input asp-for="InsuranceNumber" class="form-control" />
                <span asp-validation-for="InsuranceNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployedSince" class="control-label"></label>
                <input asp-for="EmployedSince" class="form-control" />
                <span asp-validation-for="EmployedSince" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="WarningsCount" class="control-label"></label>
                <input asp-for="WarningsCount" class="form-control" />
                <span asp-validation-for="WarningsCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót Do Listy Pracowników</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}