@using Microsoft.AspNetCore.Mvc.Localization

@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model Car

@{
    ViewData["Title"] = SharedLocalizer["Delete Car"];
}

<h1>@SharedLocalizer["Delete Car"]</h1>
<h3>@SharedLocalizer["Sure To Delete Car"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @SharedLocalizer["ProductionDate"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductionDate)
        </dd>

        <dt class = "col-sm-2">
            @SharedLocalizer["Type"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt class = "col-sm-2">
            @SharedLocalizer["EngineCapacity"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EngineCapacity)
        </dd>

        <dt class="col-sm-2">
            @SharedLocalizer["Power"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Power)
        </dd>

        <dt class="col-sm-2">
            @SharedLocalizer["Price"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["Back To List"]</a>
    </form>
</div>
